<?xml version="1.0"?>
<ruleset name="WordPress.Designolabs">
    <description>Deprecated File! Designolabs Coding Standards.</description>

    <!-- Include WordPress Plugin Coding Standards -->
    <config name="installed_paths" value="vendor/wp-coding-standards/wpcs"/>

    <!-- Only check PHP files -->
    <file>./**/*.php</file>

    <!-- Exclude some directories -->
    <exclude-pattern>./vendor/*</exclude-pattern>
    <exclude-pattern>./node_modules/*</exclude-pattern>
    <exclude-pattern>./build/*</exclude-pattern>
    <exclude-pattern>./dist/*</exclude-pattern>
    <exclude-pattern>./temp/*</exclude-pattern>

    <!-- Set the encoding -->
    <arg name="encoding" value="utf-8"/>

    <!-- Display warnings and errors -->
    <arg name="colors"/>

    <!-- Define the severity level -->
    <arg name="severity" value="10"/>

    <!-- Define the report format -->
    <arg name="report" value="full"/>

    <!-- Define the error severity -->
    <arg name="error-severity" value="1"/>
</ruleset>
